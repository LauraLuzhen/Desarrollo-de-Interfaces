@page
@model IndexModel
@{
    ViewData["Title"] = "TicTacToe Server";
}

<div class="text-center">
    <h1 class="display-4">Tic-Tac-Toe SignalR</h1>

    <div id="loginSection">
        <input type="text" id="userName" placeholder="Introduce tu nombre" class="form-control d-inline-block w-auto" />
        <button id="btnJoin" class="btn btn-primary">Unirse al Juego</button>
    </div>

    <div id="gameSection" style="display:none;" class="mt-4">
        <h3 id="statusMessage">Esperando...</h3>
        <p>Tu ficha: <strong id="myToken">-</strong></p>

        <div class="board">
            <div class="row justify-content-center">
                <button class="cell btn btn-outline-dark" data-index="0" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="1" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="2" style="width:80px; height:80px; font-size:2rem;"></button>
            </div>
            <div class="row justify-content-center">
                <button class="cell btn btn-outline-dark" data-index="3" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="4" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="5" style="width:80px; height:80px; font-size:2rem;"></button>
            </div>
            <div class="row justify-content-center">
                <button class="cell btn btn-outline-dark" data-index="6" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="7" style="width:80px; height:80px; font-size:2rem;"></button>
                <button class="cell btn btn-outline-dark" data-index="8" style="width:80px; height:80px; font-size:2rem;"></button>
            </div>
        </div>

        <button id="btnReset" class="btn btn-danger mt-4" style="display:none;">Volver a Jugar</button>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/game.js"></script>
}